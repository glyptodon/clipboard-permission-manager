{

    "manifest_version" : 2,

    "name"        : "Clipboard Permission Manager",
    "version"     : "0.1",
    "description" : "Allows users to grant direct clipboard access to web pages that use the standard document.execCommand().",

    "permissions" : [
        "http://*/*",
        "https://*/*",
        "clipboardRead",
        "clipboardWrite",
        "storage"
    ],

    "background" : {
        "persistent" : false,
        "scripts" : [
            "private/background/clipboardService.js",
            "private/background/popupService.js"
        ]
    },

    "page_action" : {
        "default_popup" : "private/popup/popup.html"
    },

    "content_scripts" : [{
        "matches" : [
            "http://*/*",
            "https://*/*"
        ],
        "js" : [
            "private/content/init.js",
            "private/content/clipboardBroker.js"
        ],
        "run_at"     : "document_start",
        "all_frames" : true
    }],

    "web_accessible_resources" : [
        "public/execCommand.js"
    ]

}
